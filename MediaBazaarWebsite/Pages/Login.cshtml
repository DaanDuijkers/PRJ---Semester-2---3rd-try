@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<div class="input-form">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="@Model.Login.Username"></label><br />
            <input asp-for="@Model.Login.Username" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="@Model.Login.Password"></label><br />
            <input asp-for="@Model.Login.Password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="post-button">Log in</button>
        </div>
    </form>
</div>